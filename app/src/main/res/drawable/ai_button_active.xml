<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#80E91E63" /> <!-- Semi-transparent pink accent -->
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>
    <!-- Inner circle -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="28dp"
                android:startColor="@color/pink_accent"
                android:endColor="@color/purple_primary" />
        </shape>
    </item>
    <!-- AI logo -->
    <item android:drawable="@drawable/ai_logo" />
</layer-list>
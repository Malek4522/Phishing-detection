<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:startColor="#4D9C27B0"
                android:endColor="#00000000" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    
    <!-- Inner border with gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="45"
                android:endColor="@color/purple_primary"
                android:startColor="@color/pink_accent" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="#1A1A1A" />
        </shape>
    </item>
</layer-list>

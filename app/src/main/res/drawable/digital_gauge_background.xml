<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer rounded rectangle for the gauge -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#1A1A1A" />
            <stroke android:color="#333333" android:width="1dp" />
        </shape>
    </item>
    
    <!-- Inner gradient for depth -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="11dp" />
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#2A2A2A"
                android:endColor="#151515" />
        </shape>
    </item>
</layer-list>

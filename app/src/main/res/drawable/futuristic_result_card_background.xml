<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:startColor="#339C27B0"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Animated border with gradient -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:angle="135"
                android:startColor="#80E91E63"
                android:centerColor="#809C27B0"
                android:endColor="#805E35B1"
                android:type="linear" />
            <stroke android:width="1dp" android:color="#80FFFFFF" />
        </shape>
    </item>
    
    <!-- Inner background with tech pattern -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <gradient
                android:angle="315"
                android:startColor="#1A1A1A"
                android:endColor="#252525"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Tech pattern overlay -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <gradient
                android:angle="90"
                android:startColor="#10FFFFFF"
                android:centerColor="#05FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Horizontal scan line -->
    <item android:left="4dp" android:right="4dp" android:top="30dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="#40E91E63" />
        </shape>
    </item>
    
    <!-- Circuit pattern dots -->
    <item android:left="8dp" android:top="8dp" android:gravity="left|top">
        <shape android:shape="oval">
            <size android:width="3dp" android:height="3dp" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <item android:right="8dp" android:top="8dp" android:gravity="right|top">
        <shape android:shape="oval">
            <size android:width="3dp" android:height="3dp" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <item android:left="8dp" android:bottom="8dp" android:gravity="left|bottom">
        <shape android:shape="oval">
            <size android:width="3dp" android:height="3dp" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <item android:right="8dp" android:bottom="8dp" android:gravity="right|bottom">
        <shape android:shape="oval">
            <size android:width="3dp" android:height="3dp" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list>

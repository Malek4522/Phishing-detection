<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#80E91E63"
                android:endColor="#00000000" />
            <size android:width="72dp" android:height="72dp" />
        </shape>
    </item>
    
    <!-- Inner circle with gradient -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:type="sweep"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="@color/purple_primary"
                android:centerColor="@color/pink_accent"
                android:endColor="@color/purple_primary" />
            <stroke android:width="2dp" android:color="#CCFFFFFF" />
        </shape>
    </item>
    
    <!-- Inner highlight for 3D effect -->
    <item android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="36dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark" />
        </shape>
    </item>
    
    <!-- Subtle grid pattern using shapes instead of bitmap -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="#08FFFFFF" android:dashWidth="1dp" android:dashGap="40dp" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="#08FFFFFF" android:dashWidth="40dp" android:dashGap="1dp" />
        </shape>
    </item>
    
    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#00000000"
                android:centerColor="#109C27B0"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Bottom vignette -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#40000000"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shield layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33FFFFFF" />
            <size android:width="120dp" android:height="140dp" />
        </shape>
    </item>
    
    <!-- Middle shield layer -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#66FFFFFF" />
        </shape>
    </item>
    
    <!-- Inner shield layer -->
    <item android:left="20dp" android:top="20dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#E91E63"
                android:endColor="#9C27B0" />
        </shape>
    </item>
</layer-list> 
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:centerColor="#80FF9800"
                android:endColor="#00FF9800"
                android:gradientRadius="100%p"
                android:startColor="#80FF9800"
                android:type="radial" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <!-- Inner card with border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#FF9800" />
            <solid android:color="#1A2035" />
        </shape>
    </item>
</layer-list>
